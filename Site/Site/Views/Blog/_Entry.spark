<div class="post">
  <h2 class="title">
    ${Html.ActionLink(entry.Title, "Entry", new{id=entry.Id})}
  </h2>
  <p class="meta">
    <span class="date">${entry.PublicationDate}</span>
    <span class="posted">
      Posted by ${Html.ActionLink(entry.Author, "Author", new{name=entry.Author})}
    </span>
  </p>
  <div style="clear: both;">&nbsp;</div>
  <div class="entry">
    <p>${entry.Content}</p>
  </div>
</div>